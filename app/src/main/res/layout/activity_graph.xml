<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:background="#F0F0F0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fahad.neurobuds.activities.GraphActivity">


    <RelativeLayout
        android:id="@+id/secondaryRelative"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="350dp">
    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:text="ACTIVE"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:text="NORMAL"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="CALM"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





    </RelativeLayout>

    <ImageView
        android:id="@+id/concImage"
        android:layout_below="@+id/secondaryRelative"
        android:layout_marginStart="10dp"
        android:src="@drawable/concentration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/secondaryRelative"
        android:layout_alignBottom="@+id/concImage"
        android:layout_toEndOf="@+id/concImage"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:text="CONCENTRATION:"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/StressText"
        android:layout_below="@+id/secondaryRelative"
        android:gravity="center"
        android:layout_alignBottom="@+id/stressImage"
        android:layout_marginEnd="40dp"
        android:layout_alignParentEnd="true"
        android:text="STRESS:"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/stressImage"
        android:layout_below="@+id/secondaryRelative"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/StressText"
        android:src="@drawable/stress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/musicButton"
        android:text="@string/b1"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/my_button_bg"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/breatheButton"
        android:text="@string/b2"
        android:layout_marginBottom="20dp"
        android:background="@drawable/my_button_bg"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/meditateButton"
        android:text="@string/b3"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/my_button_bg"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp"
        android:layout_height="50dp" />



</RelativeLayout>
